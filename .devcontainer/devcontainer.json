{
  "name": "Analyzer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "bung87.vscode-gemfile",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens"
      ],
     "settings": {
        "rubyLsp": {
          "enabled": true
        },
        "files": {
          "insertFinalNewline": true
        },
        "terminal.integrated": {
          "defaultProfile.linux": "bash",
          "fontSize": 14
        },
        "editor": {
          "formatOnSave": false,
          "fontSize": 14,
          "fontFamily": "'Cascadia Code', 'Courier New', monospace"
        },
        "workbench": {
          "colorTheme": "Github Dark Default",
          "iconTheme": "vs-seti"
        }
      }
    }
  }
}
