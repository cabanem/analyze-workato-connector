{
  "name": "Workato Connector Inspector",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "rebornix.Ruby",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens"
      ],
      "settings": {
        "files.insertFinalNewline": true,
        "rubyLsp.enabled": true,
        "rubyLsp.enabledFeatures": {
          "formatting": true,
          "diagnostics": true
        },
        "editor.formatOnSave": true,
        "editor.fontSize": 14,
        "editor.fontFamily": "'Cascadia Code', 'Courier New', monospace",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.fontFamily": "'Cascadia Code', 'Courier New', monospace",
        "workbench.colorTheme": "GitHub Dark Default",
        "workbench.iconTheme": "vs-seti"
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "bash .devcontainer/postStart.sh",

  "postAttachCommand": {
    "server": "echo 'Ready. Try: bin/run path/to/connector.rb --outdir ./out'"
  }
}
